<Window x:Class="WinCrypt.passwordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password" Height="208" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="48" />
        </Grid.RowDefinitions>
        <StackPanel Height="120">
            <Label Margin="8,0">Password:</Label>
            <PasswordBox Name="passwordBox" Height="24" Margin="8,0"/>
            <Label Margin="8,0">Confirm Password:</Label>
            <PasswordBox Name="passwordConfirmBox" Height="24" Margin="8,0" />
        </StackPanel>
        <Border Grid.Row="1" Background="WhiteSmoke">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button Name="OKButton" Margin="5,10" Width="64" Click="OKButton_Click">OK</Button>
                <Button Name="CancelButton" Margin="5,10" Width="64" Click="CancelButton_Click">Cancel</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
